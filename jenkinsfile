pipeline {
    agent any

        environment {
        DOCKER_CREDENTIALS_ID = 'DockerHub'
    }

    stages {

        stage('Clone Git Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/kavitha1507/devops-build.git'
            }
        }
        stage('Checkout') {
            steps {
                // Checkout code from the specified branch (feature/docker-setup)
                git branch: 'feature/docker-setup', url: 'https://github.com/kavitha1507/devops-build.git'
            }
        }
        stage('Build') {
            steps {
                sh 'chmod +x ./build.sh'
                sh './build.sh'
            }
        }
        stage('Deploy') {
            steps {
                sh 'chmod +x ./deploy.sh'
                sh './deploy.sh'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
