pipeline {
    agent any

    environment {
        IMAGE_NAME = 'my-react-app'  // Docker image name
        TAG = 'latest'               // Docker image tag
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')  // DockerHub credentials stored in Jenkins
        DEPLOY_SERVER = 'username@your-server-ip'  // Replace with your server's SSH credentials
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from the specified branch (can be 'dev' or 'master')
                git branch: 'dev', url: 'https://github.com/your-username/your-repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image from the Dockerfile
                    sh 'docker build -t $IMAGE_NAME:$TAG .'
                }
            }
        }

        stage('Push Docker Image to DockerHub') {
            steps {
                script {
                    // Log in to DockerHub and push the image
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds') {
                        sh 'docker push $IMAGE_NAME:$TAG'
                    }
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                script {
                    // SSH into the server and deploy the Docker container
                    sshagent (credentials: ['server-ssh-credentials']) {
                        sh '''
                        ssh -o StrictHostKeyChecking=no $DEPLOY_SERVER << EOF
                        docker pull $IMAGE_NAME:$TAG
                        docker stop react-app-container || true
                        docker rm react-app-container || true
                        docker run -d --name react-app-container -p 80:80 $IMAGE_NAME:$TAG
                        EOF
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean the workspace after the job completes
            cleanWs()
        }

        success {
            // Notify upon successful build and deployment
            echo 'Deployment successful!'
        }

        failure {
            // Notify if the pipeline fails
            echo 'Deployment failed.'
        }
    }
}
