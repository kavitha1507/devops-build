pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout code from the specified branch ('dev' branch)
                git branch: 'dev', url: 'https://github.com/kavitha1507/devops-build.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image from the Dockerfile
                    bat 'docker build -t kavi740/dev:latest .'
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                script {
                    bat "docker rm -f kavi740/dev || true"
                    bat "docker run -p 80:80 kavi740/dev:latest"
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean the workspace after the job completes
            cleanWs()
        }

        success {
            // Notify upon successful build and deployment
            echo 'Deployment successful!'
        }

        failure {
            // Notify if the pipeline fails
            echo 'Deployment failed.'
        }
    }
