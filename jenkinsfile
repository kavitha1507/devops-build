pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image from the Dockerfile
                    sh 'docker build -t kavi740/dev:latest .'
                }
            }
        }

        stage('Deploy to Server') {
            steps {
                script {
                    sh "docker rm -f kavi740/dev || true"
                    sh "docker run -p 80:80 kavi740/dev:latest"
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean the workspace after the job completes
            cleanWs()
        }

        success {
            // Notify upon successful build and deployment
            echo 'Deployment successful!'
        }

        failure {
            // Notify if the pipeline fails
            echo 'Deployment failed.'
        }
    }
